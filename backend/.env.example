# Environment variables for E4A Platform Backend

# ####################
# Database Configuration
# ####################
POSTGRES_USER=e4auser
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=e4a_platform
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Full database URL (used by SQLAlchemy)
DATABASE_URL=postgresql://e4auser:your_secure_password_here@postgres:5432/e4a_platform

# ####################
# Security
# ####################
SECRET_KEY="your-secret-key-here-change-in-production"
ALGORITHM="HS256"

# ####################
# Server
# ####################
HOST="0.0.0.0"
PORT="8000"

# CORS Origins (comma separated)
CORS_ORIGINS="http://localhost:5173,http://localhost:3000"

# ####################
# File Upload
# ####################
MAX_UPLOAD_SIZE="10485760"  # 10MB in bytes
UPLOAD_DIR="media/uploads"

# ####################
# OpenAI API Configuration (for Voice Assistant)
# ####################
OPENAI_API_KEY="openai_api_key_here"



# ####################
# Admin User (for initial setup)
# ####################
ADMIN_EMAIL="admin@e4a.com"
ADMIN_PASSWORD="Admin@123"